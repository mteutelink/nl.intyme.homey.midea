{
  "name": {
    "en": "Airconditioning",
    "nl": "Airconditioning"
  },
  "class": "thermostat",
  "capabilities": [
    "onoff",
    "thermostat_mode",
    "target_temperature",
    "measure_temperature",
    "measure_temperature.outside",
    "thermostat_boost",
    "thermostat_fan_speed",
    "thermostat_swing_mode",
    "thermostat_eco",
    "thermostat_freeze_protection",
    "thermostat_horizontal_airflow_angle",
    "thermostat_vertical_airflow_angle"
  ],
  "capabilitiesOptions": {
    "target_temperature": {
      "min": 16,
      "max": 30,
      "step": 1
    },
    "measure_temperature": {
      "title": {
        "en": "Inside temperature",
        "nl": "Binnentemperatuur"
      }
    },
    "measure_temperature.outside": {
      "title": {
        "en": "Outside temperature",
        "nl": "Buitentemperatuur"
      }
    },
    "thermostat_horizontal_airflow_angle": {
      "min": 0,
      "max": 100,
      "step": 25
    },
    "thermostat_vertical_airflow_angle": {
      "min": 0,
      "max": 100,
      "step": 25
    }
  },
  "platforms": [
    "local"
  ],
  "connectivity": [
    "lan"
  ],
  "pair": [
    {
      "id": "list_devices",
      "template": "list_devices",
      "options": {
        "singular": true
      },
      "navigation": {
        "next": "login_credentials"
      }
    },
    {
      "id": "login_credentials",
      "navigation": {
        "next": "add_devices"
      }
    },
    {
      "id": "add_devices",
      "template": "add_devices"
    }
  ],
  "repair": [
    {
      "id": "relogin_credentials"
    }
  ],
  "images": {
    "small": "{{driverAssetsPath}}/images/driver-small.png",
    "large": "{{driverAssetsPath}}/images/driver-large.png",
    "xlarge": "{{driverAssetsPath}}/images/driver-xlarge.png"
  }
}